{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/i-am-bee/bee-hive/tools/workflow.schema.json",
  "title": "BeeAI Hive",
  "description": "A schema for defining Bee Hive workflows in YAML or JSON",
  "type": "object",
  "properties": {
    "apiVersion": {
	"type": "string"
    }
    "kind": {
	"type": "string",
	"description": "Workflow"
    }
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "workflow name"
        },
        "labels": {
          "type": "object",
          "description": "workflow labels, key: value pairs"
        }
      },
      "required": [
        "name"
      ]
    },
    "spec": {
      "strategy": {
        "type": "string"
      },
      "template": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "workflow name"
          },
          "labels": {
            "type": "object",
            "description": "workflow labels, key: value pairs"
          }
        }
      },
      "agents": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "steps": {
        "type": "object",
        "description": "step name: step"
      }
      "exception": {
        "type": "string"
      },
      "prompt": {
        "type": "string"
      }
    }
  }
}
