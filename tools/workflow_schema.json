{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/i-am-bee/bee-hive/tools/workflow.schema.json",
  "title": "BeeAI Hive",
  "description": "A schema for defining Bee Hive workflows in YAML or JSON",
  "type": "object",
  "metadata": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "workflow name"
      },
      "labels": {
        "type": "object",
        "description": "workflow labels, key: value pairs"
      }
    },
    "required": [
      "name"
    ]
  },
  "spec": {
    "strategy": {
      "type": "sequence"
    },
    "properties": {
      "name": {
        "type": "string",
        "description": "workflow name"
      },
      "labels": {
        "type": "object",
        "description": "workflow labels, key: value pairs"
      }
    }
  },
  "agents": {
    "type": "array",
    "items": {
      "type": "string"
    }
  },
  "exception": "string",
  "steps": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "required": [
          "name",
          "agent"
        ],
        "name": {
          "type": "string",
          "description": "step name"
        },
        "agent": {
          "type": "string",
          "description": "the agent for this step"
        },
        "condition": {
          "type": "array",
          "description": "if/then/else or case/do/default condition",
          "items": {
            "type": "object",
            "properties": {
              "if": "string",
              "then": "string",
              "else": "string",
              "case": "string",
              "do": "string",
              "default": "string"
            }
          }
        }
      }
    }
  }
}