{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/i-am-bee/beeai-labs/maestro/schemas/workflow_schema.json",
  "title": "BeeAI Maestro",
  "description": "A schema for defining Maestro workflows in YAML or JSON",
  "type": "object",
  "properties": {
    "metadata": {
      "apiVersion": {
        "type": "string",
        "description": "maestro/v1"
      },
      "kind": {
        "type": "string",
        "description": "Workflow"
      },
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "workflow name"
        },
        "labels": {
          "type": "object",
          "description": "workflow labels, key: value pairs"
        }
      },
      "required": [
        "name"
      ]
    },
    "spec": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "sequence, condition"
            }
          }
        },
        "template": {
          "type": "object",
          "properties": {
            "metadata": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "workflow name"
                },
                "labels": {
                  "type": "object",
                  "description": "workflow labels, key: value pairs"
                }
              }
            },
            "agents": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "exception": {
              "type": "string"
            },
            "prompt": {
              "type": "string"
            },
            "steps": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "step name"
                  },
                  "agent": {
                    "type": "string",
                    "description": "the agent for this step"
                  },
                  "input": {
                    "type": "object",
                    "description": "user input",
                    "properties": {
                      "prompt": {
                        "type": "string",
                        "description": "input prompt string"
                      },
                      "template": {
                        "type": "string",
                        "description": "template string for next prompt, {prompt} and {respomse} are replaced by the previos prompt and the user response"
                      }
                    }
                  },
                  "loop": {
                    "type": "object",
                    "description": "looping construct",
                    "items": {
                      "type": "object",
                      "properties": {
                        "step": {
                          "type": "string"
                        },
                        "until": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "condition": {
                    "type": "array",
                    "description": "if/then/else or case/do/default condition",
                    "items": {
                      "type": "object",
                      "properties": {
                        "if": {
                          "type": "string"
                        },
                        "then": {
                          "type": "string"
                        },
                        "else": {
                          "type": "string"
                        },
                        "case": {
                          "type": "string"
                        },
                        "do": {
                          "type": "string"
                        },
                        "default": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          }
        }
      }
    }
  }
}