# TODO: consolidate schemas into one: this or the one in ../tools
{
  "$id": "https://github.com/i-am-bee/maestro/blob/main/maestro/agent_schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "maestro/Agent",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "description": "API version maestro/v1alpha1"
    },
    "knd": {
      "type": "string",
      "description": "must be Agent"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "agent name"
        },
        "labels": {
          "type": "object",
            "description": "agent labels, key: value pairs"
        }
      },
      "required": ["name"]
    },
    "spec": {
      "type": "object",
      "properties": {
        "model": {
          "type": "string",
          "description": "agent name"
        },
        "description": {
          "type": "string",
          "description": "agent description"
        },
        "instructions": {
          "type": "string",
          "description": "instructions for the agent"
        },
        "tools": {
          "type": "array",
          "description": "tool list of the agent"
          "items": {
            "type": "string"
          }
        },
        "input": {
          "type": "string",
          "description": "instructions for the agent"
        },
        "output": {
          "type": "string",
          "description": "instructions for the agent"
        },
	"required": ["model","instructions"]
      }
    }
  }
}
